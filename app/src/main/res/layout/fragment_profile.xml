<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Register Numbers"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">


            <!-- Name EditText -->
            <EditText
                android:id="@+id/nameEditText1"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="textPersonName"/>
            <!-- Phone Number EditText -->
            <EditText
                android:id="@+id/phoneNumberEditText1"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Phone Number1"
                android:inputType="phone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <!-- Name EditText -->
            <EditText
                android:id="@+id/nameEditText2"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="textPersonName"/>
            <!-- Phone Number EditText -->
            <EditText
                android:id="@+id/phoneNumberEditText2"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:inputType="phone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <!-- Name EditText -->
            <EditText
                android:id="@+id/nameEditText3"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="textPersonName"/>
            <!-- Phone Number EditText -->
            <EditText
                android:id="@+id/phoneNumberEditText3"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:inputType="phone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="2">

            <!-- Name EditText -->
            <EditText
                android:id="@+id/nameEditText4"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="textPersonName"/>
            <!-- Phone Number EditText -->
            <EditText
                android:id="@+id/phoneNumberEditText4"
                android:layout_width="0dp"
                android:layout_height="48sp"
                android:layout_weight="1"
                android:hint="Phone Number"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Register Button -->
            <Button
                android:id="@+id/saveNoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addPhoneNumberButton"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Save"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="30sp"
            android:weightSum="1">

            <TextView
                android:id="@+id/emergmsglabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Emergency Message"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emergmsgtextbox"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:gravity="center"
                android:hint="Type Your emergency message here.."
                android:paddingLeft="30sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Register Button -->
            <Button
                android:id="@+id/msgSaveBtn"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_below="@+id/emergmsgtextbox"
                android:layout_alignParentBottom="true"
                android:text="Save"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="40sp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
